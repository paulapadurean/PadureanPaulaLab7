<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PadureanPaulaLab7.MainPage"
             Title="Pagina Personalizată">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="10">

            <Button x:Name="CounterBtn"
                Text="Click me"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center"
                VerticalOptions="Center" />
            
            <Image Source="personal_image.jpg"
                   SemanticProperties.Description="Personal Image"
                   HeightRequest="200"
                   HorizontalOptions="Center" />

            <Label Text="Bun venit la aplicația mea personalizată!"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="Aceasta este pagina personalizată pentru laboratorul 7."
                   FontSize="18"
                   HorizontalOptions="Center" />

            <Label Text="Nume: Padurean Paula-Alexandra"
                   FontSize="18"
                   HorizontalOptions="Center" />

            <Label Text="Grupa: 5"
                   FontSize="18"
                   HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
